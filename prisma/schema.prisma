generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  phone     String?  @unique  // Made optional to support WeChat users
  name      String?
  email     String?
  avatar    String?  // URL to profile picture
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // WeChat authentication fields
  wechatOpenId    String?  @unique  // WeChat OpenID
  wechatUnionId   String?  @unique  // WeChat UnionID (if available)
  wechatSessionKey String? // Temporary session key (not stored in production)
  
  // Relations
  posts     Post[]
  comments  Comment[]
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  content     String?
  imageUrl    String?  // URL to uploaded image
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments   Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  userId    Int
  postId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}
